x = input("Plese enter first number \n")
y = input("Please enter a secound number \n")
oper = input ("Please Enter an simple arithmetic operation (+,*,-,/) \n")
x_i = int(x)
y_i = int(y)

if (oper=="+"):
    res = x_i + y_i
    print(res)
elif(oper=="*"):
    res =x_i * y_i
    print(res)
elif(oper=="-"):
    res = x_i - y_i
    print(res)
elif(oper=="/"):
    res = x_i/y_i
    print(res)
else:
    print("opertain is no valid")

input("Pres any key to exit the program")





